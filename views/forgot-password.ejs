<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Forgot Password - Marketmind</title>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-5 mb-5" style="max-width: 500px;">
    <div class="auth-container">
      <h2>Reset Your Password</h2>
      <p style="color: var(--text-secondary); margin-bottom: 2rem;">Enter your email address and we'll send you a link to reset your password.</p>

      <%- include('partials/messages') %>

      <form action="/forgot-password" method="POST">

        <div class="mb-4">
          <label class="form-label">Email Address</label>
          <input type="email" name="email" class="form-control" required placeholder="Enter your email address">
        </div>

        <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
      </form>

      <div class="form-divider">or</div>

      <p class="text-center">
        Remember your password? <a href="/login">Sign in here</a>
      </p>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
