<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Account Approvals - Admin</title>
  <style>
    .approval-container {
      padding: 30px 0;
    }
    
    .status-tabs {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
      border-bottom: 2px solid #333;
    }
    
    .tab-btn {
      padding: 12px 24px;
      border: none;
      background: transparent;
      color: #888;
      font-weight: 600;
      cursor: pointer;
      border-bottom: 3px solid transparent;
      transition: all 0.3s ease;
      font-size: 1rem;
    }
    
    .tab-btn.active {
      color: #fff;
      border-bottom-color: #007bff;
    }
    
    .tab-btn:hover {
      color: #ccc;
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
    .status-badge {
      padding: 8px 16px;
      border-radius: 25px;
      font-weight: 700;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .status-pending {
      background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
    }
    
    .status-approved {
      background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }
    
    .status-rejected {
      background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }
    
    .account-card {
      border: 1px solid #444;
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 20px;
      background: linear-gradient(135deg, #1a1a1a 0%, #242424 100%);
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    
    .account-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.4);
      border-color: #555;
    }
    
    .account-info {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-bottom: 20px;
    }
    
    .info-item {
      display: flex;
      flex-direction: column;
    }
    
    .info-label {
      color: #888;
      font-size: 0.85rem;
      font-weight: 600;
      text-transform: uppercase;
      margin-bottom: 5px;
      letter-spacing: 0.5px;
    }
    
    .info-value {
      color: #fff;
      font-size: 1.1rem;
      font-weight: 500;
    }
    
    .action-buttons {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }
    
    .btn-approve, .btn-reject {
      flex: 1;
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 0.95rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .btn-approve {
      background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }
    
    .btn-approve:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(40, 167, 69, 0.5);
    }
    
    .btn-reject {
      background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }
    
    .btn-reject:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(220, 53, 69, 0.5);
    }
    
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #888;
    }
    
    .empty-state i {
      font-size: 3rem;
      margin-bottom: 20px;
      color: #555;
    }
    
    .page-header {
      margin-bottom: 40px;
    }
    
    .page-header h2 {
      color: #fff;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 10px;
    }
    
    .page-header p {
      color: #888;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container approval-container">
    <div class="page-header">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
          <h2><i class="fas fa-check-circle"></i> Account Approvals</h2>
          <p>Review and manage pending account registrations</p>
        </div>
        <a href="/admin/dashboard" class="btn btn-primary">
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
      </div>
    </div>

    <%- include('partials/messages') %>

    <!-- Status Tabs -->
    <div class="status-tabs">
      <button class="tab-btn active" onclick="switchTab('pending')">
        <i class="fas fa-hourglass-half"></i> Pending
      </button>
      <button class="tab-btn" onclick="switchTab('approved')">
        <i class="fas fa-check"></i> Approved
      </button>
      <button class="tab-btn" onclick="switchTab('rejected')">
        <i class="fas fa-times"></i> Rejected
      </button>
    </div>

    <!-- Pending Accounts -->
    <div id="pending" class="tab-content active">
      <% const pendingAccounts = accounts.filter(a => a.accountStatus === 'pending'); %>
      <% if (pendingAccounts.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-inbox"></i>
          <h5>No pending accounts</h5>
          <p>All registrations have been processed.</p>
        </div>
      <% } else { %>
        <% pendingAccounts.forEach(account => { %>
          <div class="account-card">
            <div class="account-info">
              <div class="info-item">
                <span class="info-label">Full Name</span>
                <span class="info-value"><%= account.fullName || account.username %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Account Number</span>
                <span class="info-value"><%= account.accountNumber %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Username</span>
                <span class="info-value"><%= account.username %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Email</span>
                <span class="info-value"><%= account.email %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Account Type</span>
                <span class="info-value"><%= account.accountType %></span>
              </div>
              <div class="info-item text-right">
                <span class="info-label">Status</span>
                <span class="status-badge status-pending">Pending</span>
              </div>
              <div class="info-item">
                <span class="info-label">Created Date</span>
                <span class="info-value"><%= new Date(account.created_at).toLocaleDateString() %></span>
              </div>
            </div>

            <div class="action-buttons">
              <form action="/admin/accounts/approve/<%= account.accountId %>" method="POST" style="flex: 1;">
                <button type="submit" class="btn-approve w-100">Approve Account</button>
              </form>
              <form action="/admin/accounts/reject/<%= account.accountId %>" method="POST" style="flex: 1;">
                <button type="submit" class="btn-reject w-100">Reject Account</button>
              </form>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>

    <!-- Approved Accounts -->
    <div id="approved" class="tab-content">
      <% const approvedAccounts = accounts.filter(a => a.accountStatus === 'approved'); %>
      <% if (approvedAccounts.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-check-circle"></i>
          <h5>No approved accounts yet</h5>
          <p>Approve pending accounts to see them here.</p>
        </div>
      <% } else { %>
        <% approvedAccounts.forEach(account => { %>
          <div class="account-card">
            <div class="account-info">
              <div class="info-item">
                <span class="info-label">Full Name</span>
                <span class="info-value"><%= account.fullName || account.username %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Account Number</span>
                <span class="info-value"><%= account.accountNumber %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Username</span>
                <span class="info-value"><%= account.username %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Email</span>
                <span class="info-value"><%= account.email %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Account Type</span>
                <span class="info-value"><%= account.accountType %></span>
              </div>
              <div class="info-item text-right">
                <span class="info-label">Status</span>
                <span class="status-badge status-approved">Approved</span>
              </div>
              <div class="info-item">
                <span class="info-label">Created Date</span>
                <span class="info-value"><%= new Date(account.created_at).toLocaleDateString() %></span>
              </div>
            </div>
            <div class="action-buttons">
              <form method="POST" action="/admin/accounts/reject/<%= account.accountId %>" style="flex: 1;">
                <button type="submit" class="btn-reject w-100">Reject Account</button>
              </form>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>

    <!-- Rejected Accounts -->
    <div id="rejected" class="tab-content">
      <% const rejectedAccounts = accounts.filter(a => a.accountStatus === 'rejected'); %>
      <% if (rejectedAccounts.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-ban"></i>
          <h5>No rejected accounts</h5>
          <p>Rejected accounts will appear here.</p>
        </div>
      <% } else { %>
        <% rejectedAccounts.forEach(account => { %>
          <div class="account-card">
            <div class="account-info">
              <div class="info-item">
                <span class="info-label">Account Number</span>
                <span class="info-value"><%= account.accountNumber %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Username</span>
                <span class="info-value"><%= account.username %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Email</span>
                <span class="info-value"><%= account.email %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Account Type</span>
                <span class="info-value"><%= account.accountType %></span>
              </div>
              <div class="info-item text-right">
                <span class="info-label">Status</span>
                <span class="status-badge status-rejected">Rejected</span>
              </div>
              <div class="info-item">
                <span class="info-label">Created Date</span>
                <span class="info-value"><%= new Date(account.created_at).toLocaleDateString() %></span>
              </div>
            </div>

            <div class="action-buttons">
              <form action="/admin/accounts/approve/<%= account.accountId %>" method="POST" style="flex: 1;">
                <button type="submit" class="btn-approve w-100">Approve Account</button>
              </form>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>

  <%- include('partials/footer') %>

  <script>
    function switchTab(tabName) {
      // Hide all tabs
      document.querySelectorAll('.tab-content').forEach(tab => {
        tab.classList.remove('active');
      });
      
      // Remove active from all buttons
      document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      
      // Show selected tab
      document.getElementById(tabName).classList.add('active');
      
      // Add active to clicked button
      event.target.closest('.tab-btn').classList.add('active');
    }
  </script>
</body>
</html>

